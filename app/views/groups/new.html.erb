<div class="container-fluid">
	<div class="row head-row">
		<h1>Create Group</h1>
	</div>
	<div class="row mid-row">
		<div>
			<% if @groups.errors.any? %>
			<ul>
				<% @groups.errors.full_messages.each do |error| %>
				<li>
					<%= error %>
				</li>
				<% end %>
			</ul>
			<%end%>
		</div>


		<div class="col-sm-12">
			<%= form_for @groups do |f| %>
			<div class="field">
				<%= f.label :name %>
				<%= f.text_field :name, autofocus: true %>
			</div>
			<div class="field">
				<%= f.label :card %>
				<%= f.number_field :card, autofocus: true %>
			</div>
			<div class="action group-btn">
				<%= f.submit "create" %>
			</div>
			<%end%>
		</div>
	</div>
</div>





