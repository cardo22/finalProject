<%= provide(:title, "Home") %>
<div class="container-fluid bg-img">
	<div class="row logo-row">
		<div class="col-xs-12">
			<%= image_tag "pitches-new-logo.png", class: "logo-pic" %>
		</div>
	</div>
	<div class="row slogan-row">
		<% if user_signed_in? %>
			<div class="col-xs-6 pic-info-row">
				<h1>Hello</h1> 
				<h4 class="media-heading">
					<a href="/show/profile">
						<%= gravatar_for @user %>
					</a><br>
					<a href="/show/profile" style="color: #EFF4F1;">
						<%= @user.nick_name %>
					</a>
				</h4> 
			</div>
			<br />
			<div class=" col-xs-6 create-group-col">
				<h4><%= flash[:sign_in] %></h4>
				<a href="/groups/new">
					<button type="button" class="btn btn-default create-group-btn">Create Group</button>
				</a>
			</div>
			<% else %>
			<h1 style="font-size: 50px;">Save As You Spend</h1>
			<p class="quote-para">
				"Save money on the big, boring stuff, so that you have something left over for life's little pleasures." - <em>Elizabeth Leamy</em>
			</p>
		</div>
	</div>
	<div class="row create-sign-in-row">
		<div class="col-xs-12">
			<a href="/users/sign_up">
				<button type="button" class="btn btn-default sign-up-btn">Create Account</button>
				</a><br />
			<h4>
				<b>
					Or
	            </b>
			</h4><br />
			<a href="/users/sign_in">
				<button type="button" class="btn btn-info btn-lg sign-in-modal">Sign-In</button>
			</a>
	    </div>
	</div>
	<div class="row mid-row">
		<div class="col-xs-3 col-md-3">
			<p class="thumbnail-p-tag">
				<i class="fa fa-university" style="font-size: 100px; padding-bottom: 30px;">
				</i><br />
				<em>SAVE FOR EDUCATION.</em>
			</p>
		</div>
		<div class="col-xs-3 col-md-3">
			<p class="thumbnail-p-tag">
		    	<i class="fa fa-envira" style="font-size: 100px; padding-bottom: 30px;">
		    	</i><br />
	  			<em>SAVE FOR PEACE OF MIND.</em>
	  		</p>
  		</div>
  		<div class="col-xs-3 col-md-3">
  			<p class="thumbnail-p-tag">
  				<i class="fa fa-lock" style="font-size: 100px; padding-bottom: 30px;">
  				</i><br />
  				<em>SAVE FOR SECURITY.</em>
  			</p>
  		</div>
  		<div class="col-xs-3 col-md-3">
  			<p class="thumbnail-p-tag">
  				<i class="fa fa-child" style="font-size: 100px; padding-bottom: 30px;"></i><br />
  				<em>SAVE FOR LOVED ONES.</em>
  			</p>
  		</div>
	</div>
<% end %>
</div>










