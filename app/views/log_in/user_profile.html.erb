<div class="container-fluid">
	<div class="row pic-info-row">
    		<h4 class="media-heading">
          <a href="/users/edit">
            <%= gravatar_for @user %>
          </a>
    				<%= @user.first_name %>
    				<%= @user.last_name %>
    		</h4>
		</div>
	</div>

	<div class="row middle-row">
    <h3 class="group-topic">Savings</h3><br />
    <div class="col-sm-3 group-section">
      <div class="list-group">
        <% @groups.each do |group|%>
        <a href="/groups/<%= group.id %>" class="list-group-item active">
          <h4 class="list-group-item-heading">
              <%= group.name %>
          </h4>
            <p class="list-group-item-text">
              $<%= group.total_savings.to_f %>
            </p>
        </a>
      </div>
      <% end %>
    </div>

    <div class="col-sm-3">

    </div>

    <div class="col-sm-3">

    </div>

    <div class="col-sm-3">
      
    </div>
	</div>
</div>