<div class="container-fluid">
	<div class="row head-row">
		<div class="col-sm-6">
			<div class="media">
  			<div class="media-left profile-pic-bs">
    			<a href="#">
      				<img class="media-object" src="/assets/dummy-profile.png" alt="...">
    			</a>
  			</div>
  			<div class="media-body profile-name">
  				<% @groups.each do |group| %>
	    			<h2 class="media-heading">
	    				<%= group.name %>
	    			</h2>
	    			<br>
	    			<h1 class="total-savings">
	    				<em>Total Savings:</em><br />
	    				<i class="fa fa-usd" aria-hidden="true">
	    					<%= group.total_savings %>
	    				</i>
	    				
	    			</h1>
	    			
	    			<%= link_to "Edit", "/groups/#{group.id}/edit", class: "home-link" %>
	    			<%= link_to("Delete", group_path(group), method: :delete, data: {confirm: 'Are you sure?'}) %>
    			<% end %>
  			</div>
		</div>
		<div class="col-sm-6">
			<p class="invite-link">
				<a href="<%= new_group_invite_path(@group_id) %>">
					<i class="fa fa-paper-plane" aria-hidden="true"></i>
				</a>
				<em>Send-Invite</em>
			</p>
		</div>
	</div>
	<div class="row mid-row">
		<div class="col-sm-6 goal-col">
			<h4><%= flash[:success] %></h4>
			<table>
				<thead>
					<tr>
						<th>
							<h3>Goals</h3>
						</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% @goals.each do |goal| %>
						<td>
							<ul class="list-group">
								<li class="list-group-item goal-item">
									<a href="/groups/<%=goal.group.id%>/goals/<%= goal.id %>">
										<%= goal.goal_name %>
									</a><br />
									<i class="fa fa-usd" aria-hidden="true">
										<%= goal.goal_amount.to_f %>
									</i>
									<span class="badge">
										<%= link_to("Delete", group_goal_path(goal.group_id, goal), method: :delete, data: {confirm: 'Are you sure?'}) %>
									</span>
								</li>
							</ul>
						</td>
					</tr>
				</tbody>
			</table>
			<% end %>
			<a href="/groups/<%=@group_id%>/goals/new">
			<button type="button" class="btn btn-primary">Create goal</button>
			</a>
		</div>
		<div class="col-sm-6 contrib-col">
			<table>
				<thead>
					<tr>
						<th>
						<h2>Contributers</h2>
					   </th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% @users.each do |user| %>
						<td>
							<%= gravatar_for user %><br />
							<%= user.nick_name %>
						</td>
						<%end%>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

</div>